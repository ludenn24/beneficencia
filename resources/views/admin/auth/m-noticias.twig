                    var detallecorto = $('#detalle-corto').val();
                    var detalle = CKEDITOR.instances.detalle.getData();
                    var foto = $('#foto').val();

                    if (titulo == "") {
                        Swal.fire({
                            icon: 'warning',
                            title: '¡Advertencia!',
                            text: 'Debe imgresar un titular',
                        })
                    } else {
                           if (categoria == "") {
                            Swal.fire({
                                icon: 'warning',
                                title: '¡Advertencia!',
                                text: 'Debe seleccionar el tipo de origen.',
                            })
