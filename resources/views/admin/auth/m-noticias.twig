                            {
                                className: 'text-center',
                                targets: [4,5,6],
                            },

                            { width: "20%",
                             targets: [3] },
                           { width: "10%",
                             targets: [1] },
                          { width: "4%",
                             targets: [4,5,6] },
                           { width: "1%",
                             targets: [0] },


                        ]
