{% extends 'templates/app.twig' %}


{% block content %}
    <div class="donaciones se_parte_del_cambio">

        <main>
            <div class="col-lg-12 section_noticias_banner background_" style="background-image:url({{ base_url() }}/uploads/2019/08/partedelcambio_banner.png)">            
                <div class="ca_ content_item">
                    <h2>Donaciones</h2>
                </div>
            </div>
        </main>

          <section id="contenido">
            <div class="col-lg-12 section_partedelcambio">
                <div class="section_partedelcambio_container">
                    <div class="section_tab">
                        <div class="filtro">
                            <ul id="voluntariado-menu">
                                <li class="convenios  "><a href="{{ base_url() }}/se-parte-del-cambio/convenios/#contenido" ><i class="fas fa-scroll"></i>Linea B</a></li>
                                <li class="se-parte-del-cambio  "><a href="{{ base_url() }}/se-parte-del-cambio/voluntariado/#contenido" ><i class="fas fa-balance-scale"></i>Voluntariado</a></li>
                                <li class="donaciones  active"><a href="{{ base_url() }}/se-parte-del-cambio/donaciones/#contenido" ><i class="fas fa-hand-holding-heart"></i>Donaciones</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="section_content">
                        <h3>¡Quiero donar!</h3>
                        <div class="content_parte_delcambio">
                            <div class="container mondal_body_formar_parte">
                                <div class="formulario_" style="width: 90%;">
                                    <p><strong>Si deseas aportar tu granito de arena, <br />completa el siguiente formulario </strong></p>
                                    <form class="row" method="POST" action="https://www.beneficenciadelima.org/se-parte-del-cambio/donaciones/" autocomplete="off">
                                        <input type="hidden" name="form" value="1">

                                        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                            <label class="label-tipo">Tipo de Persona</label>
                                            <select name="tipo" id="tipo_persona" class="form-control formulario" >
                                                <option value="Natural">Natural</option>
                                                <option value="Juridica">Jurídica</option>
                                            </select>
                                        </div> 
                                        <div class="col-lg-6 col-md-12 col-sm-12 form-group form-persona">
                                            <label class="label-nombres">Nombres</label>
                                            <input type="text" name="nombres" id="nombres" class="form-control formulario"  required>
                                        </div>
                                        <div class="col-lg-6 col-md-12 col-sm-12 form-group form-persona">
                                            <label class="label-apellidos">Apellidos</label>
                                            <input type="text" name="apellidos" id="apellidos" class="form-control formulario" required>
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 form-group form-empresa" style="display: none;">
                                            <label class="label-email">RUC o RAZON SOCIAL </label>
                                            <input type="text" name="ruc" id="ruc" class="form-control formulario"  required>
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                            <label class="label-email">Correo Electrónico</label>
                                            <input type="email" name="email" id="email" class="form-control formulario"  required>
                                        </div>

                                        <div class="col-lg-6 col-md-12 col-sm-12 form-group">
                                            <label class="label-telefono">Teléfono</label>
                                            <input type="text" name="telefono" id="telefono" class="form-control formulario"  onkeypress="return validaNumericos(event)">
                                        </div> 
                                        <div class="col-lg-6 col-md-12 col-sm-12 form-group">
                                            <label class="label-telefono">DNI</label>
                                            <input type="text" name="dni" id="dni" class="form-control formulario" >
                                        </div>  
                                        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                            <label class="label-tiempo">¿Qué es lo quieres donar?  </label>
                                            <select name="que_quieres_donar" id="tiempo" class="form-control formulario" >
                                                <option value="Permanente">Bien</option>
                                                <option value="Eventual">Dinero</option>
                                            </select>
                                        </div> 

                                        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                            <label class="label-donde">¿Dónde quieres donar?   </label>
                                            <select name="donde" id="donde" class="form-control formulario" >
                                                <option value="Puericultorio Pérez Araníbar">Puericultorio Pérez Araníbar</option>
                                                <option value="Hogar Canevaro">Hogar Canevaro</option>
                                                <option value="Hogar San Vicente de Paúl">Hogar San Vicente de Paúl</option>
                                                <option value="Centros Esperanza">Centros Esperanza</option>
                                                <option value="Hogar de la Madre">Hogar de la Madre</option>
                                                <option value="Instituto Sevilla">Instituto Sevilla</option>
                                                <option value="Museo Cementerio Presbítero Matías Maestro">Museo Cementerio Presbítero Matías Maestro</option>
                                                <option value="Cementerio El Ángel">Cementerio El Ángel</option>
                                                <option value="Plaza de Acho">Plaza de Acho</option>
                                            </select>
                                        </div>                                                            
                                        <div class="col-lg-12 form-group">
                                            <label class="label-mensaje">Escribe tu mensaje</label>
                                            <textarea name="mensaje" id="mensaje" class="form-control formulario" rows="6" required></textarea>
                                        </div> 
                                        <div class="col-lg-12 form-group">
                                            <button type="submit" id="enviar" class="btn btn_default next_">Enviar</button> <span>Únete y forma parte del cambio</span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <script type="text/javascript">
                                $('#tipo_persona').on('change', function () {
                                    if (this.value == 'Natural') {
                                        $('.form-persona').show();
                                        $('.form-empresa').hide();
                                        $('.form-persona input').attr('required', 'required');
                                        $('.form-empresa input').removeAttr('required');
                                    } else {
                                        $('.form-persona').hide();
                                        $('.form-empresa').show();
                                        $('.form-persona input').removeAttr('required');
                                        $('.form-empresa input').attr('required', 'required');
                                    }
                                });
                            </script>                    
                        </div>
                    </div>

 
                </div>
            </div>
        </section>


        <section>
